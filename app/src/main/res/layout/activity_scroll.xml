<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.shubhamdhabhai.scrollableheaderanimation.ScrollActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height_min"
        android:background="@android:color/white"/>

    <android.support.v7.widget.CardView
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_margin="8dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:minHeight="@dimen/header_height_min"
            android:orientation="horizontal"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:id="@+id/ll_today"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TODAY"
                    android:paddingTop="14dp"/>

                <android.support.v4.widget.Space
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_today_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$800"
                    android:textSize="30sp"/>

                <android.support.v4.widget.Space
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_today_delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18 delivery"
                    android:layout_marginBottom="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_week"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="THIS WEEK"
                    android:paddingTop="14dp"/>

                <android.support.v4.widget.Space
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_week_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$5200"
                    android:textSize="30sp"/>

                <android.support.v4.widget.Space
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_week_delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="87 delivery"
                    android:layout_marginBottom="16dp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
